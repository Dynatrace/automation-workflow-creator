{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "types": [
      "node",
      "jest",
      "fetch-mock",
      "@testing-library/jest-dom"
    ]
  },
  "include": [
    "**/__tests__/*.ts",
    "**/__tests__/*.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/setupJest.ts"
  ],
  "exclude": [
    "dist",
    "e2e"
  ]
}
